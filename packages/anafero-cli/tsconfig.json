{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "target": "es2020",
    "module": "node16",

    "lib": ["es2023", "dom"],
    "types": ["bun-types"],

    "resolveJsonModule": false,

    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "jsx": "react"
  },
  "include": ["*.ts", "*.tsx", "*.mts"]
}
